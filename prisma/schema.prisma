generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Product {
  id         String   @id @default(uuid())
  name       String
  price      Float
  image      String
  // many to one
  category   Category @relation(fields: [categoryId], references: [id])
  categoryId Int
}

model Category {
  id   Int    @id @unique
  name String
  icon String
  slug String

  // one to many
  products Product[]
}

model Order {
  id         String @id @default(uuid())
  name       String
  date       String
  total      Float
  // many to one
  order      User   @relation(fields: [customerId], references: [id])
  customerId String
}

// Resumen - ShoppingCart
// todo : add relation with a Customer - Customer now is a auth user
model ShoppingCart {
  id         String @id @default(uuid())
  name       String
  date       String
  price      Int
  // many to one
  order      User   @relation(fields: [customerId], references: [id])
  customerId String
}

model User {
  id       String    @id @default(uuid())
  sessions Session[]
  // here you can add custom fields for your user
  // e.g. name, email, username, roles, etc.
  name     String
  lastName String
  address  String?
  username String?
  phone    String?
  email    String

  passwordHash String

  // one to many
  orders       Order[]
  ShoppingCart ShoppingCart[]
}

model Session {
  id        String   @id
  userId    String
  expiresAt DateTime

  user User @relation(references: [id], fields: [userId], onDelete: Cascade)
}
